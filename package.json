{
  "private": true,
  "scripts": {
    "cypress": "export CYPRESS_BASE_URL=http://localhost&&    cd ./frontend&&     yarn run cypress",
    "docker:config:backend:e2e": "docker-compose -f docker-compose.e2e.backend.yml",
    "docker:config:frontend:e2e": "docker-compose -f docker-compose.e2e.frontend.yml",
    "docker:config:production": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml -f docker-compose.prod.args.yml",
    "docker:test:backend:e2e": "yarn docker:config:backend:e2e build;     yarn docker:config:backend:e2e up --abort-on-container-exit --exit-code-from backend",
    "docker:test:frontend:e2e": "yarn docker:config:frontend:e2e build;     yarn docker:config:frontend:e2e up --abort-on-container-exit --exit-code-from frontend",
    "docker:dev:up": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:stage:up": "docker-compose -f docker-compose.stage.yml up -d",
    "docker:stage:down": "docker-compose -f docker-compose.stage.yml down",
    "docker:build": "yarn docker:build:backend && yarn docker:build:frontend",
    "docker:build:backend": "docker build -t harbor.codingpalette.net/library/blog-backend:latest -t harbor.codingpalette.net/library/blog-backend:${DOCKER_TAG} -f ./backend/Dockerfile ./backend",
    "docker:build:frontend": "docker build -t harbor.codingpalette.net/library/blog-frontend:latest -t harbor.codingpalette.net/library/blog-frontend:${DOCKER_TAG} -f ./frontend/Dockerfile ./frontend",
    "docker:push": "yarn docker:push:backend && yarn docker:push:frontend",
    "docker:push:backend": "docker push harbor.codingpalette.net/library/blog-backend:latest && docker push harbor.codingpalette.net/library/blog-backend:${DOCKER_TAG}",
    "docker:push:frontend": "docker push harbor.codingpalette.net/library/blog-frontend:latest && docker push harbor.codingpalette.net/library/blog-frontend:${DOCKER_TAG}"
  }
}
